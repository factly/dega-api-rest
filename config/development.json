{
    "databaseConfig": {
        "hosts": [
            "localhost:27017"
        ],
        "databases": {
            "core": "core",
            "factCheck": "fact-check"
        },
        "username": "",
        "passwd": ""
    },
    "middleware": {
        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}
